@page "/stafflist"
@rendermode InteractiveServer



@inherits EmployeeListBase

@if (employees == null)
{
    <div class="snipper"></div>
}
else{
    <div class="card-group">
    @foreach (var employee in employees)
        {
            <div class="card m-3" style="min-width: 18rem; max-width: 30.5%;">
                <div class="card-header">
                    <h3>@employee.FirstName @employee.LastName</h3>
                </div>
                @* <img class="card-img-top imageThumbnail" height="100%" src="@employee.Photo"/> *@
                <div class="card-footer text-center">
                    <a href="@($"staffdetails/{employee.EmployeeId}")" class="btn btn-primary m-1">View</a>
                    <a href="@($"editstaff/{employee.EmployeeId}")" class="btn btn-primary m-1">Edit</a>
                    <a href="#" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
        }
    </div>
}